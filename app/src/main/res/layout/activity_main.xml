<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/result_textView"
        android:textSize="32dp"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:id="@+id/solution_textView"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/buttons_layout"
        android:text="0"
        android:textSize="65dp"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:id="@+id/result_textView"
        android:layout_margin="16dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#D6D0D0"
        android:paddingVertical="16dp"
        android:layout_alignParentBottom="true"
        android:id = "@+id/buttons_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style = "@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_margin="12dp"
                android:text="C"
                android:backgroundTint="#E86A6A"
                android:textSize="38dp"
                android:textColor="@color/white"
                android:id="@+id/button_c"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style = "@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_margin="12dp"
                android:backgroundTint="#E86A6A"
                android:text="+/-"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:id="@+id/button_plusminus"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style = "@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_margin="12dp"
                android:text="%"
                android:backgroundTint="#E86A6A"
                android:textSize="38dp"
                android:textColor="@color/white"
                android:id="@+id/button_percentage"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style = "@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_margin="12dp"
                android:text="/"
                android:textSize="38dp"
                android:backgroundTint="#E39696"
                android:textColor="@color/white"
                android:id="@+id/button_divide"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style = "@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_margin="12dp"
                android:text="7"
                android:textSize="38dp"
                android:textColor="@color/white"
                android:id="@+id/button_7"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style = "@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_margin="12dp"
                android:text="8"
                android:textSize="38dp"
                android:textColor="@color/white"
                android:id="@+id/button_8"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style = "@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_margin="12dp"
                android:text="9"
                android:textSize="38dp"
                android:textColor="@color/white"
                android:id="@+id/button_9"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style = "@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_margin="12dp"
                android:text="*"
                android:textSize="38dp"
                android:backgroundTint="#E39696"
                android:textColor="@color/white"
                android:id="@+id/button_multiply"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style = "@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_margin="12dp"
                android:text="4"
                android:textSize="38dp"
                android:textColor="@color/white"
                android:id="@+id/button_4"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style = "@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_margin="12dp"
                android:text="5"
                android:textSize="38dp"
                android:textColor="@color/white"
                android:id="@+id/button_5"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style = "@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_margin="12dp"
                android:text="6"
                android:textSize="38dp"
                android:textColor="@color/white"
                android:id="@+id/button_6"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style = "@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_margin="12dp"
                android:text="-"
                android:textSize="38dp"
                android:backgroundTint="#E39696"
                android:textColor="@color/white"
                android:id="@+id/button_minus"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style = "@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_margin="12dp"
                android:text="1"
                android:textSize="38dp"
                android:textColor="@color/white"
                android:id="@+id/button_1"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style = "@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_margin="12dp"
                android:text="2"
                android:textSize="38dp"
                android:textColor="@color/white"
                android:id="@+id/button_2"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style = "@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_margin="12dp"
                android:text="3"
                android:textSize="38dp"
                android:textColor="@color/white"
                android:id="@+id/button_3"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style = "@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_margin="12dp"
                android:text="+"
                android:textSize="38dp"
                android:backgroundTint="#E39696"
                android:textColor="@color/white"
                android:id="@+id/button_plus"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style = "@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_margin="12dp"
                android:text="AC"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:id="@+id/button_ac"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style = "@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_margin="12dp"
                android:text="0"
                android:textSize="38dp"
                android:textColor="@color/white"
                android:id="@+id/button_zero"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style = "@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_margin="12dp"
                android:text="."
                android:textSize="40dp"
                android:textColor="@color/white"
                android:id="@+id/button_point"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style = "@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_margin="12dp"
                android:text="="
                android:textSize="38dp"
                android:backgroundTint="#E39696"
                android:textColor="@color/white"
                android:id="@+id/button_equals"/>
        </LinearLayout>

        </LinearLayout>

</RelativeLayout>



